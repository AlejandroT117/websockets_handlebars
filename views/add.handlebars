<div class="col-md-6 mb-3">
  <form action="" method="post" id="form-new-product">
    <div class="form-group">
      <label for="nombre">Nombre del producto</label>
      <input class="form-control" name='nombre' type='text' required id="nombre">
    </div>
    <div class="form-group">
      <label for="precio">Precio del producto</label>
      <input class="form-control" name='precio' required type='number' id="precio">
    </div>
    <div class="form-group">
      <label for="img">URL a Imagen del Producto</label>
      <input class="form-control" name='img' required type='url' pattern="https://.*" id="url-img">
    </div>
    <div class="form-group">
      <label for="stock">Stock disponible</label>
      <input class="form-control" name='stock' type='number' required id="stock">
    </div>
    <div>
      <button type="submit" class="btn btn-primary" id="submit-product">Enviar</button>
    </div>
  </form>
</div>