<div class="col-md-6 mb-3">
  <form action="/add" method="post">
    <div class="form-group">
      <label for="nombre">Nombre del producto</label>
      <input class="form-control" name='nombre' type='text' required>
    </div>
    <div class="form-group">
      <label for="precio">Precio del producto</label>
      <input class="form-control" name='precio' required type='number'>
    </div>
    <div class="form-group">
      <label for="img">URL a Imagen del Producto</label>
      <input class="form-control" name='img' required type='url' pattern="https://.*">
    </div>
    <div class="form-group">
      <label for="stock">Stock disponible</label>
      <input class="form-control" name='stock' type='number' required>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
  </form>
</div>